def lesser_of_two_evens(n1, n2):
    if n1 % 2 == 0 and n2 % 2 == 0:
        if n1 > n2:
            return n2
        else:
            return n1
    else:
        if n1 > n2:
            return n1
        else:
            return n2
p = int(input("enter 1st number : "))
q = int(input("enter 2nd number : "))
n = lesser_of_two_evens(p, q)
print(n)
